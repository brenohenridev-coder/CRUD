import mysql.connector      # Conectar seu c칩digo Python a um banco de dados MySQL.

conexao = mysql.connector.connect(
    host='localhost',
    user='root',                        # Cria uma conex칚o entre o Python e o banco de dados MySQL.
    password='********',
    database='meu_banco'
)

cursor = conexao.cursor()                       # Cria o cursor, usado para executar comandos SQL no banco de dados.

print('---Sistema de Cadastro em Mysql.---')

nome_usuario = input('Digite seu nome: ').strip()

idade_usuario = str(input('Digite sua idade: '))

email_usuario = str(input('Digite o seu email: ').strip())          # Recebe os dados do usu치rio.

cpf_usuario = str(input('Digite o seu CPF: '))

celular_usuario = str(input('Digite o seu celular: '))

nascimento_usuario = str(input('Digite a sua data de nascimento, AAAA-MM-DD: '))

comando_sql = 'INSERT INTO usuarios (nome, idade, email, cpf,celular, nascimento) VALUES (%s,%s,%s,%s,%s,%s)'    # Insere um novo registro na tabela

dados = (
    nome_usuario,
    idade_usuario,
    email_usuario,                  # Levar os valores reais para o servidor MySQL.
    cpf_usuario,
    celular_usuario,
    nascimento_usuario
)

try:
    cursor.execute(comando_sql, dados)
    conexao.commit()
    print(f"O usu치rio {nome_usuario} foi cadastrado com sucesso! 游꿀")  # Se n칚o der erro, usu치rio cadastrado. 

except mysql.connector.Error as erro:
    if erro.errno == 1062:
        print("Usu치rio j치 cadastrado (CPF ou e-mail j치 existe).")
    else:
        print("Erro ao cadastrar usu치rio.")
        print("Motivo:", erro)


finally:
    cursor.close()                     # Fecha o cursor.
    conexao.close()                    # Fecha a conex칚o com o banco de dados.

